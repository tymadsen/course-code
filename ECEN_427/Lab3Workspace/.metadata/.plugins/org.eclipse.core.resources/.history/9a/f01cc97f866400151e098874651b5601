}

void drawAliens(bool erase){

	for(alienRow = 0; alienRow < 5; alienRow++){

	}
}

void drawAlien(bool erase, bool legsIn, int alienRow, ) {
	//Use row and col to traverse the bit map of each alien
	int row, col, alien, alienRow;
	//Use sRow and sCol to traverse the screen rows and columns
	int sRow = 0;
	int sCol = 0;
	point_t temp = getAlienBlockPosition();
	xil_printf("alien block origin:%d %d", temp.x,temp.y);
//	xil_printf("alien height: %d\n alien width: %d\n", sizeof(alien_top_in_12x8), sizeof(alien_top_in_12x8[0]));

		for(alien = 0; alien < 11; alien++){
			for(row = 0, sRow=0; row < ALIENHEIGHT; row++, sRow+=2) {
				for(col = 0, sCol=0; col < ALIENWIDTH; col++, sCol+=2) {
					//Will print the right color if we are not erasing
//					int bitmapPtr[32];
					int x = &alien_top_in_12x8;
//					int* bitmapPtr = (alienRow == 0) ? &alien_top_in_12x8 : (alienRow == 1 || alienRow == 2) ? &alien_middle_in_12x8 : &alien_bottom_in_12x8;
					if (((*(x+row) & (1<<(ALIENWIDTH-1-col))) && !erase) {
						//Print the same pixel to the immediate 4 pixels
						int color = (alienRow == 0) ? BLUE : (alienRow == 1 || alienRow == 2) ? MAGENTA : ORANGE;
						if(alienRow == 1)
						framePointer0[(sRow+temp.y+alienRow)*640 + (sCol+temp.x) + (alien*ALIENWIDTH*2)] = color;
						framePointer0[(sRow+temp.y+alienRow)*640 + (sCol+temp.x+1) + (alien*ALIENWIDTH*2)] = color;
						framePointer0[(sRow+temp.y+1+alienRow)*640 + (sCol+temp.x+1) + (alien*ALIENWIDTH*2)] = color;
						framePointer0[(sRow+temp.y+1+alienRow)*640 + (sCol+temp.x) + (alien*ALIENWIDTH*2)] = color;
					}
					else {
						framePointer0[(sRow+temp.y+alienRow)*640 + (sCol+temp.x) + (alien*ALIENWIDTH*2)] = BLACK;
						framePointer0[(sRow+temp.y+alienRow)*640 + (sCol+temp.x+1) + (alien*ALIENWIDTH*2)] = BLACK;
						framePointer0[(sRow+temp.y+1+alienRow)*640 + (sCol+temp.x+1) + (alien*ALIENWIDTH*2)] = BLACK;
						framePointer0[(sRow+temp.y+1+alienRow)*640 + (sCol+temp.x) + (alien*ALIENWIDTH*2)] = BLACK;
					}
				}
			}
		}
	}
	return;
}
void drawAlienBullets(bool erase){}

void drawBunkers(bool erase, int bunker){
	int row, col;
	int sRow = 0;
	int sCol = 0;
	point_t temp;
	temp.y = BUNKERSTARTY;
	//Set the right coordinates for the corresponding bunker
	if(bunker == 0){
		temp.x = BUNKER0STARTX;
	}
	else if(bunker == 1) {
		temp.x = BUNKER1STARTX;
	}
	else if(bunker == 2) {
		temp.x = BUNKER2STARTX;
	}
	else {
		temp.x = BUNKER3STARTX;
	}
	for(row = 0; row < BUNKERHEIGHT; row++) {
		for(col = 0; col < BUNKERWIDTH; col++) {
			//Will print the right color if we are not erasing
			if ((bunker_24x18[row] & (1<<(BUNKERWIDTH-1-col))) && !erase) {
				//Print the same pixel to the immediate 4 pixels
				framePointer0[(sRow+temp.y)*640 + (sCol+temp.x)] = GREEN;
				framePointer0[(sRow+temp.y)*640 + (sCol+temp.x+1)] = GREEN;
				framePointer0[(sRow+temp.y+1)*640 + (sCol+temp.x+1)] = GREEN;
				framePointer0[(sRow+temp.y+1)*640 + (sCol+temp.x)] = GREEN;
			}
			else {
//				xil_printf("blackpixel\n");
				framePointer0[(sRow+temp.y)*640 + (sCol+temp.x)] = BLACK;
				framePointer0[(sRow+temp.y)*640 + (sCol+temp.x+1)] = BLACK;
				framePointer0[(sRow+temp.y+1)*640 + (sCol+temp.x+1)] = BLACK;
				framePointer0[(sRow+temp.y+1)*640 + (sCol+temp.x)] = BLACK;
			}
			sCol += 2;
		}
		sRow += 2;
		sCol = 0;
	}
	return;
}

